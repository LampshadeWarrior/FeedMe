<p id="notice"><%= notice %></p>

<div class="feed-table">
  <h1>Feeds</h1>
  <div class="feed-box">
    <table>
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @feeds.each do |feed| %>
          <tr>
            <td><%= link_to feed.name, entries_path(feed), class: "link" %></td>
            <td><%= feed.description %></td>
            <td><%= link_to 'Edit', edit_feed_path(feed), class: "link" %></td>
            <td><%= link_to 'Delete', feed_path(feed), method: :delete, data: {confirm: 'Are you sure?' }, class: "link" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br />
    <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#NewFeedModal">
    New Feed
  </button>

  <!-- Modal -->
  <div class="modal fade" id="NewFeedModal" tabindex="-1" role="dialog" aria-labelledby="NewFeedModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="NewFeedModalLabel">New Feed</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @feed, url: {action: "create"} do |f| %>
            <%= f.input :name %>
              <br />
            <%= f.input :url %>
              <br />
            <%= f.input :description %>
              <br />
            <%= f.submit "Create Feed", class: "btn btn-primary" %>
          <% end %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
